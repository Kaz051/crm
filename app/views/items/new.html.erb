<div class="contents row">
  <div class="container">
    <h4>商品登録</h4>
    <%= form_with(model: @item, local: true) do |form| %>

      <%= render 'shared/error_messages', model: form.object %>

      <%= form.text_field :name, placeholder: "商品名" %>
      <%= form.text_field :purchase_price, placeholder: "仕入れ価格" %>
      <%= form.submit "登録" %>
    <% end %>
  </div>
</div>