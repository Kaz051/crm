<!DOCTYPE html>
<html>
  <head>
    <title>CRM</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <h1 class="logo"><a href="/">CRM</a></h1>
          </div>  
            <% if user_signed_in? %>
              <div class="nav__right">
                <%= link_to "ログアウト", destroy_user_session_path, class: :nav__logout, method: :delete %>
                <%= link_to "#{current_user.name}さんのマイページ", user_path(current_user), class: :nav__btn %>
              </div>
            <% else %>
              <div class="grid-6">
                <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
                <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
              </div>
            <% end %>
        </div>
      </div>
    </header>  
    <%= yield %>
    <footer class="footer">
      <p class="copyright">© 2021 Kazunori Kobayashi</p>
    </footer>
  </body>
</html>
