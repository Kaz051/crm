<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">顧客編集</h2>
      <%= form_with(model: @customer, local: true) do |form| %>

        <%= render 'shared/error_messages', model: form.object %>

        <div class="field">
          <%= form.text_field :name, placeholder: "顧客名" %>
        </div>
        <div class="actions">
          <%= form.submit "編集", class: :form__btn  %>
        </div>  
      <% end %>
      <div><%= link_to "トップページへ戻る", root_path, class: "menu" %>
      </div>
    </div>
  </div>
</div>